<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="taxt.pbb.uts.tgs_ppb.MainActivity">
    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        android:text="Jenis Olahraga yang dipilih:"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/waktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jenis_olahraga"
        android:layout_marginLeft="8px"
        android:text="Waktu Olahraga (jam)"
        android:textSize="8pt" />

    <Button
        android:id="@+id/kurang"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignRight="@id/isi"
        android:layout_below="@+id/waktu"
        android:layout_marginRight="100px"
        android:layout_marginTop="10px"
        android:text="-"
        android:textSize="10pt" />

    <EditText
        android:id="@+id/isi"
        android:layout_width="100px"
        android:layout_height="120px"
        android:layout_below="@id/waktu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10px"
        android:text="" />

    <Button
        android:id="@+id/tambah"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignLeft="@id/isi"
        android:layout_below="@id/waktu"
        android:layout_marginLeft="100px"
        android:layout_marginTop="10px"
        android:text="+" />
    <Button
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10px"
        android:text="Lakukan Olahraga"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/jenis_olahraga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul"
        android:textSize="7pt"
        android:layout_marginLeft="10px"
        android:layout_marginBottom="10px"
        android:text="Pilihan Olahraga"/>
</RelativeLayout>

